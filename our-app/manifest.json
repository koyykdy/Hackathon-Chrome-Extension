{
  "name": "Multicopy",
  "description": "Copy up to four pieces of text into individual slots, then paste them at your command!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "hotkeys.js"
  },
  "permissions": [
    "storage",
    "activeTab", 
    "scripting",
    "tabs"
  ],
  "commands": {
    "multi-copy1": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "Copy currently selected text to slot 1"
    },
    "multi-paste1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Paste text from slot 1"
    },
    "multi-copy2": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Alt+Shift+2"
      },
      "description": "Copy currently selected text to slot 2"
    },
    "multi-paste2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "Paste text from slot 2"
    },
    "multi-copy3": {

      "description": "Copy currently selected text to slot 3"
    },
    "multi-paste3": {

      "description": "Paste text from slot 3"
    },
    "multi-copy4": {

      "description": "Copy currently selected text to slot 4"
    },
    "multi-paste4": {

      "description": "Paste text from slot 4"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "16": "/images/Muticopy-logo-16.png",
    "32": "/images/Muticopy-logo-32.png",
    "48": "/images/Muticopy-logo-48.png",
    "128": "/images/Muticopy-logo-128.png"
    }
  },
  "icons": {
    "16": "/images/Muticopy-logo-16.png",
    "32": "/images/Muticopy-logo-32.png",
    "48": "/images/Muticopy-logo-48.png",
    "128": "/images/Muticopy-logo-128.png"
  },
  "options_page": "options.html"
}
